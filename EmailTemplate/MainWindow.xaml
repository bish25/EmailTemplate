        mc:Ignorable="d"
        Title="MainWindow" Height="725" Width="1153">
    <Grid>
        <Button x:Name="button" Content="Load Template" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Width="111" Click="button_Click"/>
        <RichTextBox x:Name="richTextBox" Margin="157,56,141,10" LostFocus="SaveCaretPostion">
